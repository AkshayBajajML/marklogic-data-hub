<envelope xmlns="http://company.com/envelope" xmlns:hub="http://marklogic.com/hub-in-a-box">
  <header>
    <hire-date>
      <!-- run the xpath extractor to get the value for <hire-date> -->
      <hub:extractor type="xpath" path="/e:employee/e:hire_date[1]">
        <!-- 0 or more functions to run against the extracted value -->
        <hub:function name="parseDate" format="[M01]/[D01]/[Y0001]"/>
      </hub:extractor>
    </hire-date>
  </header>
  <original>
    <!-- insert the original document here -->
    <hub:original-document/>
  </original>
</envelope>
